    rw callB[bid][tid];
    ro callA[bid][tid];
    ro callA[bid][tid + 1];
  }
  sync;
  if (tid < j - 1) {
    rw callA[bid][tid];
    ro callB[bid][tid];
    ro callB[bid][tid + 1];
  }
  sync;
}
