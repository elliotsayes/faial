shared randArray, output, callA, callB;

const
  local tid,
  local bid,
  global numSteps,
  ;

assert distinct [tid][bid];

ro randArray[bid];
sync;
foreach j < numSteps {
  assert (j + (numSteps % 2))  % 2 == 0;
